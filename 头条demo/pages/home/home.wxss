/* pages/home/home.wxss */
#header{
  height:90rpx;
  border-bottom:solid 1rpx #e8e8e8;
}

#header .search{
  width:90rpx;
  height:90rpx;
  padding-right:5rpx;
  display:flex;
  justify-content: center;
  align-items: center;
}

#header .channels{
  width:465rpx;
  height:90rpx;
  white-space: nowrap;
}

#header .channels view{
  display:inline-block;
  width:64rpx;
  height:84rpx;
  margin-right:32rpx;
  font-size: 30rpx;
  line-height:90rpx;
  
}

#header .channels .active{
  border-bottom:solid 6rpx #f85959;
  color:#f85959;
}

#header .plus{
  width:90rpx;
  height:90rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  border-left:solid 1rpx #ddd;
  box-shadow: -2rpx 0rpx 4rpx #ddd;
}

#header .user{
  width:90rpx;
  height:90rpx;
  display:flex;
  justify-content: center;
  align-items: center;
}

#content {
  width:100%;
  height:1000rpx;
}

#content swiper{
  height:100%;
}

.news-list{
  height:100%;
  width:690rpx;
  padding: 0rpx 30rpx;
}

.news-list .item{
  min-height:80rpx;
  border-bottom: solid 1rpx #e8e8e8;
  padding: 30rpx 0rpx;
}

.news-list .item .title{
  font-size:36rpx;
}

.news-list .item .media{
  font-size:23rpx;
  color:#999999;
}


::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

#zhezhao{
  width:100%;
  height:100%;
  position:absolute;
  left:0rpx;
  top:0rpx;
  background:white;
}

#zhezhao{
  padding-left:30rpx;
}

#zhezhao > .close{
  padding-top:35rpx;
}

.mine-channels{
  padding-top:40rpx;
  overflow: hidden;
}

.title{
  padding-bottom:40rpx;
}

.title .b-title{
  font-size:40rpx;
  font-weight: bold;
}

.title .s-title{
  font-size:30rpx;
  color:#999999;
}

.channels .item{
  width:160rpx;
  height:80rpx;
  float:left;
  margin-right:20rpx;
  margin-bottom: 20rpx;
  background:#f5f5f5;
  font-size:30rpx;
  line-height:80rpx;
  text-align: center;
  position:relative;

}

.channels .item .close{
  width:32rpx;
  height:32rpx;
  position:absolute;
  right:-15rpx;
  top:-15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.other-channels{
  padding-top:60rpx;
}